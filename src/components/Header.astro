---
import Logo from '../assets/logo.png';
---
<header class="container" style="min-height: 0px; position: fixed; top: 0; left: 0; right: 0; z-index: 100; backdrop-filter: blur(10px); padding: 0px">
    <div class="padder" style="display: flex; align-items: center; justify-content: space-between; padding-top: 0.5rem; padding-bottom: 0.5rem; padding-left: 1rem; padding-right: 1rem;">
      <div class="logo">
        <a href="/"><img src={Logo.src} alt="Logo" style="width: 32px; height: 32px; object-fit: contain;"/></a>
      </div>
      <nav>
        <ul class="nav-links">
            <!-- <li><a href="/pricing" class="nav-link">Pricing</a></li> -->
            <li><a href="https://app.undermind.ai" class="nav-link" style="margin-right: .5rem;">Login</a></li>
            <li><a href="https://app.undermind.ai" target="_blank" class="button">Sign Up</a></li>
        </ul>
        <button class="hamburger" aria-label="Toggle navigation">
          <span class="bar"></span>
          <span class="bar"></span>
          <span class="bar"></span>
        </button>
      </nav>
    </div>
  </header>
  
  <script is:inline>
    const hamburger = document.querySelector('.hamburger');
    const navLinks = document.querySelector('.nav-links');
  
    hamburger.addEventListener('click', () => {
      navLinks.classList.toggle('active');
    });
  </script>
  
  <style>
    .logo a {
      font-size: 1.5rem;
      font-weight: bold;
      text-decoration: none;
    }
    nav {
      display: flex;
      align-items: center;
      position: relative;
    }
    .nav-links {
      list-style: none;
      display: flex;
      gap: 1rem;
      margin: 0;
      padding: 0;
      align-items: center;
    }
    .nav-links a {
      text-decoration: none;
    }
    .nav-link {
        padding: .5rem;
        color: var(--text-base);
        font-weight: 500;
    }
    .nav-link:hover {
        color: var(--text-focus);
    }
    .hamburger {
      display: none;
      flex-direction: column;
      gap: 4px;
      border: none;
      background: transparent;
      cursor: pointer;
    }
    .hamburger .bar {
      display: block;
      width: 25px;
      height: 3px;
      background: #333;
    }
